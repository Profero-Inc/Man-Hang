{
    "tasks": [
        {
            // This task tells VS Code how to compile the C++ file using g++
            "type": "cppbuild",
            "label": "C/C++: g++ build active file", // Name shown in VS Code
            "command": "/usr/bin/g++", // The compiler path (g++)
            "args": [
                "-fdiagnostics-color=always", // Makes error messages colorful
                "-g", // Includes debug information
                "${file}", // The current file you are working on
                "-o", // Output file option
                "${fileDirname}/${fileBasenameNoExtension}", // Output file name (same name without .cpp)
                "-lncurses" // Links the ncurses library (used for text-based UIs)
            ],
            "options": {
                "cwd": "${fileDirname}" // Sets the working folder to where the file is
            },
            "problemMatcher": [
                "$gcc" // Helps detect and highlight compiler errors
            ],
            "group": {
                "kind": "build", // Marks this as a build task
                "isDefault": true // Makes this the default build task
            },
            "detail": "Task generated by Debugger." // Just a description
        },
        {
            // Another build task, but the order of -o and -lncurses is wrong
            // This one might cause problems
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "-lncurses", // Wrong: this should come after the output file
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /usr/bin/g++"
        },
        {
            // A simpler build task that does not use ncurses
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /usr/bin/g++"
        }
    ],
    "version": "2.0.0" // Version of the tasks system
}
